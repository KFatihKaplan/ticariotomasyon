@using ticariotomasyon.Models.siniflar
@model List<faturakalem>
@{
    ViewBag.Title = "faturadetay";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Fatura Kalemleri Sayfası</h2>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active"></li>
</ol>

<table class="table table-hover">
    <tr>
        <th>ID</th>
        <th>Açıklama</th>
        <th>Miktar</th>
        <th>Birim Fiyat</th>
        <th>Tutar</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.faturaid</td>
            <td>@x.acıklama</td>
            <td>@x.miktar</td>
            <td>@x.birimfiyat</td>
            <td>@x.tutar</td>
        </tr>
    }
</table>
<a href="/fatura/yenikalem" class="btn btn-default"style="background-color:darksalmon">Yeni Kalem Girişi</a>
