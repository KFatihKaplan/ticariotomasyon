@using ticariotomasyon.Models.siniflar
@model List<personel>
@{
    ViewBag.Title = "departmandetay";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Departman Detay Sayfası</h2>
<br />
<ol class="breadcrumb mb-4"> 
    <li class="breadcrumb-item active">Departman Adı: @ViewBag.d</li>
</ol>

<table class="table table-hover">
    <tr>
        <th>Personel</th>
        <th>Satışlar</th>
    </tr>
    @foreach (var x in Model)
    {
    <tr>
        <td>@x.personelad @x.personelsoyad</td>
        <td><a href="/departman/departmanpersonelsatis/@x.personelid" class="btn btn-default" style="background-color:navajowhite">Satışlar</a></td>
    </tr>
    }
</table>